<Window x:Class="LyricsSceneMaker_CSharp.LyricsSceneXaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LyricsSceneMaker_CSharp"
        mc:Ignorable="d"
        Title="LyricsSceneXaml" Height="720" Width="1280"
        WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid>
            <Grid.Effect>
                <BlurEffect x:Name="blurEffect" Radius="0" RenderingBias="Quality"/>
            </Grid.Effect>
            <Rectangle Name="Rectangle1" Width="1280" Height="720" Fill="White"></Rectangle>
            <Image Name="ScenePictureBox" MouseDown="ScenePictureBox_MouseDown" Stretch="Uniform" Source="images/아무레도_검은색.png" />
        </Grid>
        <Label Name="Titlebar" MouseLeftButtonDown="Titlebar_MouseLeftButtonDown" Height="50" VerticalAlignment="Top"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="Images/cd-shadow.png" Margin="1040,45,100,100" Width="40" Height="15"/>
            <Image Name="CDImage" Grid.Row="0" Source="Images/cd-icon.png" Margin="1040,5,100,100" Width="40" Height="40" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform x:Name="rotationDegree" Angle="100"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <TextBlock Name="DescriptorLabel" Text="Welcome our Application!" Grid.Row="0" VerticalAlignment="Top" Margin="0,10,0,0"  HorizontalAlignment="Center"
                   FontFamily="/LyricsSceneMaker_CSharp;component/Fonts/#Cafe24 Shiningstar" FontSize="50" Foreground="Black"
                   MouseDown="DescriptorLabel_MouseDown" MaxWidth="1200" Padding="5" TextWrapping="WrapWithOverflow" TextAlignment="Center"/>
            <TextBlock Name="LyricsLabel1" Text="Lyrics Loading..." Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                   FontSize="35" FontFamily="/LyricsSceneMaker_CSharp;component/Fonts/#Gmarket Sans TTF Light" Background="#66000000" Foreground="White"
                   MouseDown="LyricsLabel_MouseDown" MaxWidth="1200" Padding="5" TextWrapping="WrapWithOverflow" TextAlignment="Center"/>
            <TextBlock Name="LyricsLabel2" Text="Lyrics Loading..." Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Center"
                   FontSize="30" FontFamily="/LyricsSceneMaker_CSharp;component/Fonts/#Gmarket Sans TTF Light" Foreground="White" Background="#66000000"
                   MouseDown="LyricsLabel_MouseDown" MaxWidth="1200" Padding="5" TextWrapping="WrapWithOverflow" TextAlignment="Center"/>
            <Image Name="AhdelronPictureBox" Width="130" Height="50" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Source="images/아무레도_검은색.png"
                   MouseDown="AhdelronPictureBox_MouseDown"/>
        </Grid>
        <TextBlock Name="FirstLastText" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Hidden"
               FontFamily="/LyricsSceneMaker_CSharp;component/Fonts/#Cafe24 Shiningstar" FontSize="150" Background="#66000000" Foreground="White"
               MaxWidth="1200" TextWrapping="WrapWithOverflow" TextAlignment="Center" MouseDown="LyricsLabel_MouseDown"/>
    </Grid>
</Window>
